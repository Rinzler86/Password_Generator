@model Password_Generator.Models.User_Password_Generator
@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<form asp-action="Register" method="post" class="needs-validation" novalidate onsubmit="convertAnswersToLowerCase()">
    <div class="form-group">
        <label asp-for="FirstName" class="control-label"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName" class="control-label"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HashedPassword" class="control-label"></label>
        <input asp-for="HashedPassword" type="password" class="form-control" />
        <span asp-validation-for="HashedPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ResetQuestion1" class="control-label"></label>
        <select asp-for="ResetQuestion1" class="form-control" asp-items="Html.GetEnumSelectList<Password_Generator.Models.SecurityQuestion>()" onchange="updateSecondQuestionOptions()"></select>
        <span asp-validation-for="ResetQuestion1" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ResetAnswer1" class="control-label"></label>
        <input asp-for="ResetAnswer1" class="form-control" />
        <span asp-validation-for="ResetAnswer1" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ResetQuestion2" class="control-label"></label>
        <select asp-for="ResetQuestion2" class="form-control" asp-items="Html.GetEnumSelectList<Password_Generator.Models.SecurityQuestion>()"></select>
        <span asp-validation-for="ResetQuestion2" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ResetAnswer2" class="control-label"></label>
        <input asp-for="ResetAnswer2" class="form-control" />
        <span asp-validation-for="ResetAnswer2" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</form>

@section Scripts {
    <script>
        function updateSecondQuestionOptions() {
            var question1 = document.getElementById("ResetQuestion1").value;
            var question2Select = document.getElementById("ResetQuestion2");
            for (var i = 0; i < question2Select.options.length; i++) {
                question2Select.options[i].disabled = question2Select.options[i].value === question1;
            }
        }

        function convertAnswersToLowerCase() {
            var answer1 = document.getElementById("ResetAnswer1");
            var answer2 = document.getElementById("ResetAnswer2");
            answer1.value = answer1.value.toLowerCase();
            answer2.value = answer2.value.toLowerCase();
        }
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


