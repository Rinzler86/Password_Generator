@model Password_Generator.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Login" method="post" class="needs-validation" novalidate>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label"></label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>

<p class="mt-3">Don't have an account? <a asp-action="Register" asp-controller="User">Create one</a></p>
<p class="mt-3"><a href="#" data-bs-toggle="modal" data-bs-target="#forgotPasswordModal">Forgot Password?</a></p>

<!-- Forgot Password Modal -->
<div class="modal fade" id="forgotPasswordModal" tabindex="-1" aria-labelledby="forgotPasswordModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="forgotPasswordModalLabel">Forgot Password</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="forgotPasswordForm" asp-action="ForgotPassword" method="post" class="needs-validation" novalidate>
                    <div class="form-group">
                        <label for="forgotPasswordEmail" class="control-label">Email</label>
                        <input type="email" id="forgotPasswordEmail" name="Email" class="form-control" required />
                        <span class="text-danger" data-valmsg-for="Email" data-valmsg-replace="true"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mt-3">Submit</button>
                </form>
                <div id="securityQuestions" style="display:none;">
                    <form id="resetPasswordForm" asp-action="ResetPassword" method="post" class="needs-validation" novalidate>
                        <input type="hidden" id="resetPasswordEmail" name="Email" />
                        <div class="form-group">
                            <label id="securityQuestion1" class="control-label"></label>
                            <input type="text" id="answer1" name="Answer1" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label id="securityQuestion2" class="control-label"></label>
                            <input type="text" id="answer2" name="Answer2" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label for="newPassword" class="control-label">New Password</label>
                            <input type="password" id="newPassword" name="NewPassword" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label for="confirmPassword" class="control-label">Confirm New Password</label>
                            <input type="password" id="confirmPassword" name="ConfirmPassword" class="form-control" required />
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Reset Password</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#forgotPasswordForm').on('submit', function (e) {
                e.preventDefault();
                var email = $('#forgotPasswordEmail').val();
                $.post('@Url.Action("ForgotPassword", "User")', { email: email }, function (data) {
                    if (data.success) {
                        $('#resetPasswordEmail').val(email);
                        $('#securityQuestion1').text(data.question1);
                        $('#securityQuestion2').text(data.question2);
                        $('#forgotPasswordForm').hide();
                        $('#securityQuestions').show();
                    } else {
                        alert(data.message);
                    }
                });
            });

            $('#resetPasswordForm').on('submit', function (e) {
                e.preventDefault();
                var formData = $(this).serialize();
                $.post('@Url.Action("ResetPassword", "User")', formData, function (data) {
                    if (data.success) {
                        alert('Password reset successful!');
                        location.reload();
                    } else {
                        alert(data.message);
                    }
                });
            });
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


