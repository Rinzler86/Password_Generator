@{
    ViewData["Title"] = "Home";
}

<div class="text-center" style="border-bottom: 4px groove; border-top: 4px groove;">
    <img src="~/images/vaultguard.png" alt="VaultGuard" class="img-fluid vaultguard-logo" style="max-height: 400px;" />
    <p>Secure Your Digital Life with VaultGuard - Your Ultimate Password Protector!</p>
</div>

<div class="text-center mt-4">
    <div style="display: inline-block; margin: 10px;">
        <h3>Secure</h3>
        <img src="~/images/vault-door.png" alt="Vault Door" class="img-fluid" style="max-height: 250px; border: 4px solid #2B4570;" />
    </div>
    <div style="display: inline-block; margin: 10px;">
        <h3>Trustworthy</h3>
        <img src="~/images/happy-lock.png" alt="Happy Lock" class="img-fluid" style="max-height: 250px; border: 4px solid #2B4570;" />
    </div>
    <div style="display: inline-block; margin: 10px;">
        <h3>Protected</h3>
        <img src="~/images/server-room.png" alt="Server Room" class="img-fluid" style="max-height: 250px; border: 4px solid #2B4570;" />
    </div>
</div>

<div class="text-center mt-4">
    <h2>Subscription Options</h2>
    <div class="d-flex justify-content-center mt-3">
        <div class="card mx-2" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">Monthly</h5>
                <h6 class="card-subtitle mb-2 text-muted">$3.99 per month</h6>
                <p class="card-text">Enjoy full access to all features with a monthly subscription.</p>
                <a href="#" class="btn btn-primary">Subscribe Now</a>
            </div>
        </div>
        <div class="card mx-2" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">Yearly</h5>
                <h6 class="card-subtitle mb-2 text-muted">$35 per year</h6>
                <p class="card-text">Save more with our yearly subscription plan.</p>
                <a href="#" class="btn btn-primary">Subscribe Now</a>
            </div>
        </div>
        <div class="card mx-2" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">3 Years</h5>
                <h6 class="card-subtitle mb-2 text-muted">$99 for 3 years</h6>
                <p class="card-text">Get the best value with our 3-year subscription plan.</p>
                <a href="#" class="btn btn-primary">Subscribe Now</a>
            </div>
        </div>
    </div>
</div>

















